<Page x:Class="Login_Interface.Books_Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Login_Interface"
      mc:Ignorable="d" 
      Background="Transparent"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Books_Menu">

    <Grid>
        
        <TextBlock Height="100" Width="700" VerticalAlignment="Top" HorizontalAlignment="Center"
                   Margin="0,25,0,0" Text="Books Database Management" TextAlignment="Center" 
                   FontStyle="Italic" FontWeight="Bold" Foreground="White" FontSize="45">
        </TextBlock>
        <TextBlock Height="100" Width="700" VerticalAlignment="Top" HorizontalAlignment="Center"
                   Margin="0,30,0,0" Text="Books Database Management" TextAlignment="Center" 
                   FontStyle="Italic" FontWeight="Bold" Foreground="Orange" FontSize="45">
        </TextBlock>
        
        
        
        
        
        
        
        
        
        
        
        <Button x:Name="ViewBook_button"
                    Width="200" Height="50" 
                    Style ="{StaticResource style1}"
                    FontSize="18"
                    FontWeight="Heavy"
                    Content="View Book Database" 
                    VerticalAlignment="Center" HorizontalAlignment="Center"
            Margin="0,0,0,0" Click="ViewBook_button_Click"/>
        <StackPanel  Orientation="Horizontal"
                     VerticalAlignment="Center" HorizontalAlignment="Center" 
                     Margin="0,125,0,0">

            <Button x:Name="AddBook_button"
                    Width="125" Height="45" 
                    Style ="{StaticResource style1}"
                    FontSize="15"
                    FontWeight="Heavy"
                    Content="ADD BOOKS" 
                    VerticalAlignment="Center" HorizontalAlignment="Left"
                Margin="0,0,50,0" Click="AddBook_button_Click"/>

            <Button x:Name="DeleteBook_button"
                    Width="125" Height="45" 
                    Style ="{StaticResource style1}"
                    FontSize="15"
                    FontWeight="Heavy"
                    Content="DELETE BOOKS" Click="DeleteBook_button_Click" 
                   />

            <Button x:Name="EditBook_button"
                    Width="125" Height="45" 
                    Style ="{StaticResource style1}"
                    FontSize="15"
                    FontWeight="Heavy"
                    Content="EDIT BOOKS" 
                    Margin="50,0,0,0" Click="EditBook_button_Click"/>




        </StackPanel>




    </Grid>
</Page>
